</body>


<style>
table, th, td {
  border: 1px solid black;
  margin-left: 200px;
}
th, td {
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left: 10px;
  padding-right: 10px;
}
.newET {
  margin-left: 200px;
}
</style>

<% if $user_role == "Admin" %>

<p id="notice"><%= notice %></p>

<div class="section-title">
  <h1>Expense Types</h1>
</div>

<div class="newET">
  <%= button_to 'New Expense Type', expense_types_new_path, method: :get %>
</div>

<br>

<table>
  <thead>
    <tr>
      <th>Expense Type</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @expense_types.each do |expense_type| %>
      <tr>
        <td><%= expense_type.etype %></td>
        <td><%= expense_type.description %></td>
        <td><%= link_to 'Show', expense_type %></td>
        <td><%= link_to 'Edit', edit_expense_type_path(expense_type) %></td>
        <td><%= link_to 'Delete', expense_type, method: :delete, data: { confirm: 'Are you sure you want to delete this expense type?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<body>
  <center>
    <div class="logo">
      <%= image_tag("Untitled_Artwork.png", height: '420', width: '420', :alt => "BLC logo") %>
    </div>
  </center
</body>

<% end %>