<p id="notice"><%= notice %></p>

<h1>Receipts</h1>

<p>Sort by:
<%= link_to "Date", receipts_path(order: 'date') %>
</p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Amount</th>
      <th>Reason</th>
      <th>Date of Transaction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.id %></td>
        <td>$<%= receipt.amount %></td>
        <td><%= receipt.reason %></td>
        <td><%= receipt.date %></td>
        <td><%= link_to 'Show', receipt %></td>
        <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receipt', new_receipt_path %>
